<% include ../partials/header %>
<div class="container">
  <div class="row">
    <div class="col-md-7 col-12 mx-auto mt-4">
      <h2 class="text-center">Add new campground</h2>
      <form action="/campgrounds" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label class="lead text-muted" for="name">Camground name</label>
          <input type="text" class="form-control form-control-lg" id="name" name="campground[name]" aria-describedby="nameHelp" placeholder="Enter campground name" required>
        </div>
        <div class="form-group">
          <label class="lead text-muted" for="price">Price</label>
          <input type="Number" class="form-control form-control-lg" id="price" name="campground[price]" aria-describedby="priceHelp" min="0.01" step="0.01" placeholder="Enter price" required>
        </div>
        <div class="form-group">
          <label class="lead text-muted" for="image">Image</label>
          <input type="file" class="form-control form-control" accept="image/*" id="image" name="image" aria-describedby="imageHelp" placeholder="Enter image url" required>
        </div>
        <div class="form-group">
          <label class="lead text-muted" for="location">Enter location</label>
          <input type="text" class="form-control form-control-lg" id="location" name="location" aria-describedby="locationHelp" placeholder="Enter location" required>
        </div>
        <div class="form-group">
         <label class="lead text-muted" for="description">Example textarea</label>
         <textarea class="form-control form-control-lg" id="description" name="campground[description]" rows="5"></textarea>
       </div>
        <button type="submit" class="btn btn-primary btn-lg">Create campground</button>
      </form>
    </div>
  </div>
</div>
<% include ../partials/footer %>
<% include ../partials/scripts %>
