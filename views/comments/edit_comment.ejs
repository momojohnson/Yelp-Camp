<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-6 mx-auto mt-5">
            <p class=" text-right"><a href="/" class=" btn btn-primary">Back</a></p>
            <h4 class="text-center">Add comment for <%= campground.name %></h4>
        <form action="/campgrounds/<%= campground.id %>/comments/<%= comment.id %>?_method=PUT" method="POST">
              <div class="form-group">
                  <label for="comment">Comment:</label>
                  <textarea class="form-control" rows="5" name=comments[comment]" id="comment"><%= comment.comment %></textarea>
            </div>
              <button type="submit" class="btn btn-success btn-sm">Save changes</button>
        </form>
        </div>
    </div>

</div>
<% include ../partials/scripts %>
<% include ../partials/footer %>
