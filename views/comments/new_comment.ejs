<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-6 mx-auto mt-5">
            <p class=" text-right"><a href="/" class=" btn btn-primary">Back</a></p>
            <h4 class="text-center">Add comment for <%= campground.name %></h4>
        <form action="/campgrounds/<%=campground._id%>/comments", method="post">
              <div class="form-group">
                  <label for="comment">Comment:</label>
                  <textarea class="form-control" rows="5" id="comment" name="comments[comment]" placeholder="Add a description"></textarea>
            </div>
              <button type="submit" class="btn btn-success btn-sm">Add Comment</button>
        </form>
        </div>
    </div>

</div>
<% include ../partials/scripts %>
<% include ../partials/footer %>
